<div class="nav container-fluid col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4"> 
  <div id="to-do-list-title" class="col-xs-10 col-sm-10 col-md-10 col-lg-10">  
    <%= "New to do" if !@todo.title.present? %>
    <%= "Edit to do" if @todo.title.present? %>
  </div>
</div>
<div class="form container container-fluid col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
        <%= form_for @todo do |f| %>
          <div class="form-group">
            <%= f.label :title, "Title"  ,class: "label-control"%>
            <% if @todo.errors[:title].present? %>
              <span style="color: red"><%= "#{@todo.errors[:title].join}"%></span>
            <% end %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :note, "Note" ,class: "label-control"%>
            <% if @todo.errors[:note].present? %>
              <span style="color: red">
                <%= "#{@todo.errors[:note].join}" %>
              </span>
            <% end %>
            <%= f.text_area :note ,class: "form-control", rows:"4", maxlength:'100'%>    
          </div>

          <div class="form-group">
            <%= f.label :due_date, "Due date" ,class: "label-control"%>
              <% if @todo.errors[:due_date].present? %>
              <span style="color: red" >
                <%= "#{@todo.errors[:due_date].join}" %>
              </span>
            <% end %>
            <div class='input-group date' id='datetimepicker1'>
              <%= f.text_field :due_date, class: "form-control"%> 
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :due_time, "Due time" ,class: "label-control"%>
              <% if @todo.errors[:due_time].present? %>
              <span style="color: red">
                <%= "#{@todo.errors[:due_time].join}" %>
              </span>
            <% end %>
            <div class='input-group date' id='datetimepicker3'>
              <%= f.text_field :due_time, class: "form-control"%> 
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
              </span>
            </div>
          </div>
          <div >
              <%= f.check_box :check_box, checked: false, style: 'visibility: hidden' %>
          </div>
          <%= f.submit 'Create', class: "btn btn-primary", style: "float: right" if !@todo.title.present? %>
          <%= f.submit 'Updeat', class: "btn btn-primary", style: "float: right" if @todo.title.present? %>
          <%= link_to 'Cancel', todos_path, class: "btn btn-danger", style: "float: right" %> 
        <% end %>
    </div>
  </div>  
</div>