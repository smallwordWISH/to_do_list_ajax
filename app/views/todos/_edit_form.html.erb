<%= form_for todo, {class: "edit-form" , remote: true } do |f| %>
  <div class="form-group edit-form-title">
    <%= f.text_field :title, maxlength: 20, class: "form-control" %>
  </div>
  <div class="update-btn">
    <%= f.submit "Update", class: "btn btn-primary btn-sm" %>
  </div>
  <div class="form-group edit-form-note">
    <%= f.text_area :note, maxlength: 100, class: "form-control"%>
  </div>
<% end %>